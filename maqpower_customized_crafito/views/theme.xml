<odoo>
    <template id="custom_product_deatils_page" inherit_id="theme_crafito.theme_crafito_product_details">
        <xpath expr="//form[@class='js_add_cart_variants']" position="replace">
            <t t-if="product.ask_for_quote == True">
                <div class="js_product">
                    <div class="details">
                        <t t-if="product.description_sale">
                            <div class="pro-desc">
                                <p t-field="product.description_sale"/>
                            </div>
                        </t>
                    </div>
                    <t t-placeholder="select">
                        <input class="product_id" name="product_id" t-att-value="int(product.product_variant_ids[0]) if len(product.product_variant_ids) == 1 else '0'" type="hidden"/>
                        <t t-call="website_sale.variants">
                            <t t-set="ul_class" t-value="'nav-stacked'"/>
                        </t>
                    </t>
                    <p class="css_not_available_msg bg-danger" style="padding: 15px;" t-if="len(product.product_variant_ids) &gt; 1">Product not available</p>
                    <!-- <div class="add-to-cart">
                        <a class="btn cart-btn btn-lg" data-toggle="modal" href="#" id="ask_for_quote" t-att-data-target="'#ask_for_quote-%s' %(product.id)">Quote Request</a>
                    </div> -->
                    <div class="modal fade quickview-modal" role="dialog" t-att-id="'ask_for_quote-%s' %(product.id)">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <h3 class="text-center">Request Quote</h3>
                                    <div class="quickview-row">
                                        <form action="/shop/ask_for_quote" class="" id="form_ask_for_quote" method="POST">
                                            <input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>
                                            <div class="form-group col-md-12">
                                                <span style="font-size: 20px;">
                                                    <strong>
                                                        <t t-esc="product.name"/>
                                                    </strong>
                                                </span>
                                                <!-- <p>Please provide details below questions. That we will send you questions by email.</p>-->
                                            </div>
                                            <t t-if="request.env.user.id != 4">
                                                <t t-set="p_name" t-value="request.env.user.partner_id.name"/>
                                                <t t-set="p_email" t-value="request.env.user.partner_id.email"/>
                                                <t t-set="p_phone" t-value="request.env.user.partner_id.phone"/>
                                            </t>
                                            <div class="form-group col-md-12" id="cust_name">
                                                <label class="control-label" for="cust_name">Name</label>
                                                <input class="form-control" name="cust_name" t-att-readonly="True if p_name else False" t-att-value="p_name if p_name else None" type="text"/>
                                            </div>
                                            <div class="form-group col-md-12" id="cust_email">
                                                <label class="control-label" for="cust_email">Email</label>
                                                <input class="form-control" name="cust_email" t-att-readonly="True if p_email else False" t-att-value="p_email if p_email else None" type="email"/>
                                            </div>
                                            <div class="form-group col-md-12" id="cust_phone">
                                                <label class="control-label" for="cust_phone">Phone</label>
                                                <input class="form-control" name="cust_phone" t-att-readonly="True if p_phone else False" t-att-value="p_phone if p_phone else None" type="tel"/>
                                            </div>
                                            <input class="product_id" name="product_id" t-att-value="product.product_variant_id.id if product.product_variant_id.ids else '0'" type="hidden"/>
                                            <div class="form-group col-md-12" t-if="product.attribute_line_ids.sorted(key=lambda x: x.attribute_id.sequence)">
                                                <t t-call="maqpower_customized_crafito.product_variants">
                                                    <t t-set="custom_ul_class" t-value="'custom-nav-stacked'"/>
                                                </t>
                                            </div>
                                            <div class="form-group col-md-12" id="prod_qty">
                                                <label class="control-label" for="prod_qty">Quantity</label>
                                                <input class="form-control" name="prod_qty" type="text"/>
                                            </div>
                                            <div class="form-group col-md-12" id="quote_comment">
                                                <label class="control-label" for="quote_comment">Comment</label>
                                                <textarea class="form-control" name="quote_comment" placeholder="Please state if you have any special requirements..." rows="3"/>
                                            </div>
                                            <hr/>
                                            <div class="form-group col-md-12">
                                                <button class="btn btn-primary" id="quote_send" type="submit">Send</button>or 
                                                
                                                <a class="" data-dismiss="modal" id="quote_cancel" type="button">Cancel</a></div>
                                        </form>
                                    </div>
                                </div>
                                <button class="btn btn-default close-btn" data-dismiss="modal" type="button">
                                    <i class="fa fa-times-circle"/>
                                </button>
                            </div>
                        </div>
                    </div>
                    <t t-set="quote_success" t-value="request.session.get('quote_success')"/>
                    <t t-set="sale_web" t-value="request.httprequest.query_string"/>
                    <t t-if="sale_web">
                        <t t-set="web_string" t-value="str(sale_web.decode('utf-8')).split('=')"/>
                        <div class="quote_message" t-if="quote_success and web_string[0] == 'quote_success' and web_string[1] == 'True'">
                            <p class="alert alert-success">Thanks for requesting a quotation for product, our sales team will get back to you soon.
                            </p>
                        </div>
                    </t>
                </div>
            </t>
            <t t-if="product.ask_for_quote == False">
                <form class="js_add_cart_variants" method="POST" t-att-action="keep('/shop/cart/update')">
                    <input name="csrf_token" t-att-value="request.csrf_token()" type="hidden"/>
                    <div class="js_product">
                        <div class="details">
                            <div class="price-box">
                                <t t-call="website_sale.product_price"/>
                            </div>
                            <t t-if="product.description_sale">
                                <div class="pro-desc">
                                    <p t-field="product.description_sale"/>
                                </div>
                            </t>
                        </div>
                        <t t-placeholder="select">
                            <input class="product_id" name="product_id" t-att-value="int(product.product_variant_ids[0]) if len(product.product_variant_ids) == 1 else '0'" type="hidden"/>
                            <t t-call="website_sale.variants">
                                <t t-set="ul_class" t-value="'nav-stacked'"/>
                            </t>
                        </t>
                        <p class="css_not_available_msg bg-danger" style="padding: 15px;" t-if="len(product.product_variant_ids) &gt; 1">Product not available</p>
                        <div class="add-to-cart">
                            <a class="btn cart-btn btn-lg js_check_product a-submit" href="#" id="add_to_cart">
                                <i class="fa fa-shopping-cart"/>Add to Cart</a>
                        </div>
                    </div>
                </form>
            </t>
        </xpath>
    </template>
    <template id="product_variants">
        <t t-set="custom_attribute_value_ids" t-value="get_attribute_value_ids(product)"/>
        <ul t-att-data-custom_attribute_value_ids="custom_attribute_value_ids" t-attf-class="list-unstyled js_custom_variants #{custom_ul_class}">
            <t t-as="variant_id" t-foreach="product.attribute_line_ids.sorted(key=lambda x: x.attribute_id.sequence)">
                <li t-if="len(variant_id.value_ids) &gt;1">
                    <strong t-field="variant_id.attribute_id.name"/>
                    <t t-if="variant_id.attribute_id.type in ['select', 'hidden']">
                        <select t-att-name="'prod_attribute-%s-%s' % (product.id, variant_id.attribute_id.id)" t-attf-class="form-control #{'custom_js_variant_change' if variant_id.attribute_id.create_variant else ''}">
                            <t t-as="prod_value_id" t-foreach="variant_id.value_ids">
                                <option t-att-value="prod_value_id.id">
                                    <span t-field="prod_value_id.name"/>
                                </option>
                            </t>
                        </select>
                    </t>
                    <t t-if="variant_id.attribute_id.type == 'radio'">
                        <ul class="list-unstyled">
                            <t t-set="prod_inc" t-value="0"/>
                            <t t-as="prod_value_id" t-foreach="variant_id.value_ids">
                                <li class="form-group" style="margin: 0;">
                                    <label class="control-label" style="margin: 0 20px;">
                                        <input style="vertical-align: top; margin-right: 10px;" t-att-checked="'checked' if not prod_inc else None" t-att-class="'custom_js_variant_change' if variant_id.attribute_id.create_variant else None" t-att-name="'prod_attribute-%s-%s' % (product.id, variant_id.attribute_id.id)" t-att-value="prod_value_id.id" type="radio"/>
                                        <span t-field="prod_value_id.name"/>
                                    </label>
                                </li>
                                <t t-set="prod_inc" t-value="prod_inc+1"/>
                            </t>
                        </ul>
                    </t>
                    <t t-if="variant_id.attribute_id.type == 'color'">
                        <ul class="list-inline">
                            <t t-set="prod_inc" t-value="0"/>
                            <li t-as="prod_value_id" t-foreach="variant_id.value_ids">
                                <label t-attf-class="css_attribute_color #{'active' if not prod_inc else ''}" t-attf-style="background-color:#{prod_value_id.html_color or prod_value_id.name}">
                                    <input t-att-checked="'checked' if not prod_inc else None" t-att-class="'custom_js_variant_change' if variant_id.attribute_id.create_variant else None" t-att-name="'prod_attribute-%s-%s' % (product.id, variant_id.attribute_id.id)" t-att-title="prod_value_id.name" t-att-value="prod_value_id.id" type="radio"/>
                                </label>
                                <t t-set="prod_inc" t-value="prod_inc+1"/>
                            </li>
                        </ul>
                    </t>
                </li>
            </t>
        </ul>
    </template>
