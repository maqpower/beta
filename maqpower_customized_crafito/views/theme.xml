    <template id="website_tabs_fields" inherit_id="theme_crafito.theme_crafito_product_details" name="Website Custom Tab Fields">
        <xpath expr="//div[@id='website_description']/div/ul/li" position="after">
            <t t-set="is_html" t-value="website.check_for_html_data()"/>
            <li role="presentation" t-if="product.product_info and product.product_info != is_html">
                <a aria-controls="product_info" data-toggle="tab" href="#product_info" role="tab">Information</a>
            </li>
            <li role="presentation" t-if="product.product_features and product.product_features != is_html">
                <a aria-controls="product_features" data-toggle="tab" href="#product_features" role="tab">Features</a>
            </li>
            <li role="presentation" t-if="product.product_options and product.product_options != is_html">
                <a aria-controls="product_options" data-toggle="tab" href="#product_options" role="tab">Options</a>
            </li>
            <li role="presentation" t-if="product.product_features_and_benefits and product.product_features_and_benefits != is_html">
                <a aria-controls="product_features_and_benefits" data-toggle="tab" href="#product_features_and_benefits" role="tab">Features and Benefits</a>
            </li>
            <li role="presentation" t-if="product.product_specification and product.product_specification != is_html">
                <a aria-controls="product_specification" data-toggle="tab" href="#product_specification" role="tab">Specifications</a>
            </li>
            <li role="presentation" t-if="product.product_extra_info and product.product_extra_info != is_html">
                <a aria-controls="product_extra_info" data-toggle="tab" href="#product_extra_info" role="tab">Information</a>
            </li>
        </xpath>
        <xpath expr="//div[@id='website_description']//div[@id='description']" position="after">
            <div class="tab-pane" id="product_info" role="tabpanel" t-if="product.product_info and product.product_info != is_html">
                <div class="oe_structure mt16" id="product_info" itemprop="product_info" t-field="product.product_info"/>
                <div class="oe_structure"/>
            </div>
            <div class="tab-pane" id="product_features" role="tabpanel" t-if="product.product_features and product.product_features != is_html">
                <div class="oe_structure mt16" id="product_features" itemprop="product_features" t-field="product.product_features"/>
                <div class="oe_structure"/>
            </div>
            <div class="tab-pane" id="product_options" role="tabpanel" t-if="product.product_options and product.product_options != is_html">
                <div class="oe_structure mt16" id="product_options" itemprop="product_options" t-field="product.product_options"/>
                <div class="oe_structure"/>
            </div>
            <div class="tab-pane" id="product_features_and_benefits" role="tabpanel" t-if="product.product_features_and_benefits and product.product_features_and_benefits != is_html">
                <div class="oe_structure mt16" id="product_features_and_benefits" itemprop="product_features_and_benefits" t-field="product.product_features_and_benefits"/>
                <div class="oe_structure"/>
            </div>
            <div class="tab-pane" id="product_specification" role="tabpanel" t-if="product.product_specification and product.product_specification != is_html">
                <div class="oe_structure mt16" id="product_specification" itemprop="product_specification" t-field="product.product_specification"/>
                <div class="oe_structure"/>
            </div>
            <div class="tab-pane" id="product_extra_info" role="tabpanel" t-if="product.product_extra_info and product.product_extra_info != is_html">
                <div class="oe_structure mt16" id="product_extra_info" itemprop="product_extra_info" t-field="product.product_extra_info"/>
                <div class="oe_structure"/>
            </div>
        </xpath>
    </template>
    <template id="custom_theme_crafito_products_add_to_cart" inherit_id="theme_crafito.theme_crafito_products_add_to_cart">
        <xpath expr="//div[@id='quick_view_product']//div[@class='product-info']//div[@class='price-box']" position="attributes">
            <attribute name="t-if">product.ask_for_quote == False</attribute>
        </xpath>
        <xpath expr="//div[@class='view']//div[@class='shopping-cart']" position="replace">
            <div class="shopping-cart">
                <input name="product_id" t-att-value="product.product_variant_id.id" type="hidden"/>
                <t t-if="product.ask_for_quote == True">
                   <!--  <a t-att-href="'/shop/product/%s' % slug(product)">Quote Request
                    </a> -->
                </t>
                <t t-if="product.ask_for_quote == False">
                    <t t-if="len(product.product_variant_ids) == 1">
                        <a class="a-submit">
                            <i class="fa fa-shopping-cart"/>Add to Cart</a>
                    </t>
                    <t t-if="len(product.product_variant_ids) &gt; 1">
                        <a t-att-href="keep('/shop/product/%s' % slug(product), page=(pager['page']['num'] if pager['page']['num']&gt;1 else None))">
                            <i class="fa fa-shopping-cart"/>Add to Cart</a>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
