<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="custom_product_information" model="ir.ui.view">
        <field name="name">custom.product.information</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="theme_crafito.crafito_view_product_template_form_multiple_image"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="ask_for_quote"/>
                    <label for="ask_for_quote"/>
                </div>
            </xpath>
            <xpath expr="//notebook//page[last()]" position="after">
                <page string="Website Tabs" name="description">
                    <group name="product_information">
                        <field name="product_info"/>
                        <field name="product_features"/>
                        <field name="product_options"/>
                        <field name="product_features_and_benefits"/>
                        <field name="product_specification"/>
                        <field name="product_extra_info"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
