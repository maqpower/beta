<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">	
	   <record id="module_service_category" model="ir.module.category">
	        <field name="name">Service</field>
	        <field name="sequence">101</field>
	    </record>
	    <record id="service_group_user" model="res.groups">
	        <field name="name">User</field> 
	        <field name="category_id" ref="module_service_category"/>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	    </record>
	    <record id="service_group_officer" model="res.groups">
	        <field name="name">Officer</field>
	        <field name="implied_ids" eval="[(4, ref('service_group_user'))]"/>
	        <field name="category_id" ref="module_service_category"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>
	    <record id="service_group_manager" model="res.groups">
	        <field name="name">Manager</field>
	        <field name="implied_ids" eval="[(4, ref('service_group_officer'))]"/>
	        <field name="category_id" ref="module_service_category"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>
	    
	    <record id="service_group_user_technician" model="res.groups">
	        <field name="name">Technician</field>
	        <field name="category_id" ref="module_service_category"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>
	    <record id="workorder_rule_for_manager" model="ir.rule">
	        <field name="name">Own Workorders</field>
	        <field ref="model_service_customer_information" name="model_id"/>
	        <field name="domain_force">['|',('technician','=',user.id),('create_uid','=',user.id)]</field>
	        <field name="groups" eval="[(4, ref('biztech_service.service_group_user_technician'))]"/>
    	</record>
	   <record id="group_delete_records" model="res.groups">
	        <field name="name">Delete</field>
	        <field name="category_id" ref="base.module_category_usability"/>
	        <field name="users" eval="[(4, ref('base.user_root'))]"/>
	    </record>
	    
	    <record id="partner_create_group" model="res.groups">
            <field name="name">Create</field>
            <field name="category_id" ref="base.module_category_usability"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">User Have All The Access</field>
        </record>
        
        <record id="partner_edit_group" model="res.groups">
            <field name="name">Edit</field>
            <field name="category_id" ref="base.module_category_usability"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">User Can Edit Shipping Address Only</field>
        </record>
        
	</data>
</odoo>
