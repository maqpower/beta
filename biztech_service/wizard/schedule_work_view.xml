<?xml version="1.0"?>
<odoo>
    <record id="schedule_work_view_form" model="ir.ui.view">
        <field name="name">schedule.work.view.form</field>
        <field name="model">schedule.work</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Log an Activity">
                <group col= "4">
                    <field name="service_cutomer_id" invisible = "1"/>
                </group>
                <group col="4">
                    <field name="name" readonly = "1"/>
                    <field name="partner_id"/>
                    <field name="schedule_date" required = "1"/>
                    <field name="fleet_vehicle_id" required = "1" domain="[('service_stock_id','!=',False)]"/>
                    <field name="technician_id" required = "1" domain="[('groups_id','=',technician_gruop_id)]"/>
                    
                    <field name="technician_gruop_id" invisible = "1"/>
                </group>
                <footer>
                    <button name="action_schedule" string="Schedule Workorder" type="object" class="btn
                        btn-primary" />
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <record id="schedule_workorder_action" model="ir.actions.act_window">
        <field name="name">Schedule a Workorder</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schedule.work</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="schedule_work_view_form"/>
        <field name="target">new</field>
    </record>
    
   
    <record id="schedule_work_view_form_from_kanban" model="ir.ui.view">
        <field name="name">schedule.work.view.form.kanban</field>
        <field name="model">schedule.work</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Log an Activity">
                <group col= "4">
                    <field name="service_cutomer_id" invisible = "1"/>
                </group>
                <group col="4">
                    <field name="name" readonly = "1"/>
                    <field name="partner_id"/>
                    <field name="schedule_date" />
                    <field name="fleet_vehicle_id" domain="[('service_stock_id','!=',False)]"/>
                    <field name="technician_id" required = "1" domain="[('groups_id','=',technician_gruop_id)]"/>
                    <field name="technician_gruop_id" invisible = "1"/>
                </group>
                <footer>
                    <button name="action_schedule_kanban" string="Schedule Workorder" type="object" class="btn
                        btn-primary" />
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="schedule_workorder_action_kanban" model="ir.actions.act_window">
        <field name="name">Schedule a Workorder For Kanban</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schedule.work</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="schedule_work_view_form_from_kanban"/>
        <field name="target">new</field>
    </record>
    
</odoo>
