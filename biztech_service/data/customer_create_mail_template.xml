<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mails & quote templates is done in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="0">
        
        <record id="email_template_customer_create" model="mail.template">
           <field name="name">Email send after Contact Us Detail</field>
           <field name="email_from">${ctx['email_from']} </field>
           <field name="subject">New Contact Us Request</field>
           <field name="email_to">${'sales@maqpower.com'}</field>
           <field name="model_id" ref="crm.model_crm_lead"/>
           <field name="auto_delete" eval="False"/>
           <field name="body_html"><![CDATA[
        
           <span style="font-weight:bold;"><strong>New Contact Us Page Detail,<strong></span>
            <p> Name :-     ${ctx['name']} </p>
            <p> Email :-    ${ctx['email_from']} </p>
            <p> Conatact :- ${ctx['phone']}</p>
            <p> subject :-  ${ctx['subject']}</p>
            <p> Country :-  ${ctx['country']}</p></span>
        <p>Best regards,</p>
</div>
]]></field>
       </record>
    </data>
</odoo>
