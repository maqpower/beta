<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="free_delivery_carrier_truck_service" model="delivery.carrier">
            <field name="name">Service Truck</field>
            <field name="fixed_price">0.0</field>
            <field name="free_over" eval="True"/>
            <field name="amount">1000</field>
            <field name="sequence">1</field>
            <field name="delivery_type">fixed</field>
            <field name="product_id" ref="delivery.product_product_delivery"/>
        </record>
        
         <record id="seq_picking_type_truck_internal" model="ir.sequence">
            <field name="name">Truck Inventory Internal</field>
            <field name="prefix">TRC/INT/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
         <record id="picking_type_truck_inventory" model="stock.picking.type">
            <field name="name">Truck Internal Transfer</field>
            <field name="sequence_id" ref="seq_picking_type_truck_internal"/>
            <field name="code">internal</field>
            <field name="warehouse_id" eval="False"/>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock.stock_location_stock"/>
        </record>
        
        <record id="seq_picking_type_truck_outgoing" model="ir.sequence">
            <field name="name">Truck Inventory Out</field>
            <field name="prefix">TRC/OUT/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        
         <record id="picking_type_truck_delivery" model="stock.picking.type">
            <field name="name">Truck Delivery Order</field>
            <field name="sequence_id" ref="seq_picking_type_truck_outgoing"/>
            <field name="code">outgoing</field>
            <field name="warehouse_id" eval="False"/>
            <field name="default_location_src_id" ref="stock.stock_location_stock"/>
            <field name="default_location_dest_id" ref="stock.stock_location_customers"/>
        </record>
    </data>
</odoo>
