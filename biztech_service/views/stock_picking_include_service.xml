<?xml version="1.0" encoding="utf-8"?>
<odoo>
 
    
    <!-- get default maqpower template in report template field -->
    <record id="view_stock_picking_service" model="ir.ui.view">
        <field name="name">view.stock.picking.service</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='origin']" position="after">
                <field name='is_truck_transfer' invisible="1"/>
                <field name='transfer_by'/>
            </xpath>
             <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name='service_id'/>
            </xpath>
        </field>
    </record>
    
     <record id="view_stock_picking_service_tree" model="ir.ui.view">
        <field name="name">view.stock.picking.service.tree </field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name='service_id'/>
            </xpath>
        </field>
    </record>
    
       <record id="view_stock_move_service_tree" model="ir.ui.view">
        <field name="name">view.stock.move.service.tree </field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name='service_id'/>
            </xpath>
        </field>
    </record>
    
    <!-- stock picking inter truck search view -->
    <record id="stock_picking_inherited_search_view" model="ir.ui.view">
            <field name="name">stock.picking.search</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position='after'>
                    <field name='origin'/>
                </xpath>
                <xpath expr="//filter[@name='backorder']" position='before'>
                    <filter name='inter_trcuk' string='Inter Truck' domain="[('origin','=', 'Inter Truck Transfer')]"/>
                </xpath>
            </field>
        </record>

        <!-- stock picking truck to warehouse search view -->
    <record id="stock_picking_wwarehouse-truck" model="ir.ui.view">
            <field name="name">stock.picking.search</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position='after'>
                    <field name='origin'/>
                </xpath>
                <xpath expr="//filter[@name='backorder']" position='after'>
                    <filter name='truck_warehouse' string='Truck warehouse' domain="[('origin','=', 'Truck To Warehouse')]"/>
                </xpath>
            </field>
        </record>
    </odoo>
