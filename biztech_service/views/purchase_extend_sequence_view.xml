<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rearrange Po line in ascending order based on id -->
    <record id="view_purchase_order_line_sequence" model="ir.ui.view">
        <field name="name">view.purchase.order.line.sequence</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
               <button name="get_original_sequence" string="Back To Original"
                        type="object" class="fa fa-arrow-right oe_link" help="It will rearrange all the line in ascending order"/>
            </xpath>
        </field>
    </record>
</odoo>
