<?xml version="1.0" ?>
<odoo>
	<record id="product_template_view_tree_inherit" model="ir.ui.view">
		<field name="name">product.template.view.tree.inherit</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='categ_id']" position="after">
				<field name="property_stock_inventory" />
				<field name="posx" />
				<field name="posy" />
				<field name="posz" />				
			</xpath>
		</field>
	</record>
	<record id="product_product_view_tree_inherit" model="ir.ui.view">
		<field name="name">product.product.view.tree.inherit</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_product_tree_view"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='price']" position="after">
				<field name="property_stock_inventory" />
				<field name="posx" />
				<field name="posy" />
				<field name="posz" />				
			</xpath>
		</field>
	</record>
	</odoo>