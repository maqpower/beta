        <!--account invoice inherit for add customer_id field for deliver to domain-->
        <record id="view_account_invoice_customer_id" model="ir.ui.view">
            <field name="name">view.account.invoice.customer</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale.account_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="customer_id" invisible="1" />
                </xpath>
            </field>
        </record>

    <record id="purchase_partner_address_extend" model="ir.ui.view">
            <field name="name">purchase.partner.address.extend</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="arch" type="xml">
        <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="string">Cancel Purchase Order</attribute>
                </xpath>
                 <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}" domain="[('supplier','=',True),('custom_lead','=',False)]"/>
                    <field name="customer_id" invisible="1" />
                    <label for="street" string="" nolabel = "1" style="border-bottom: 1px solid black;"/>
                    <div style="border-bottom: 1px solid black;">
                        <div class="o_address_format" name="div_address">
                            <field name="vendor_street" placeholder="Street..." class="o_address_street"/>
                            <field name="vendor_street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="vendor_city" placeholder="City" class="o_address_city"/>
                            <field name="vendor_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' />
                            <field name="vendor_zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="vendor_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' invisible = "1"/>
                        </div>
                    </div>
                </xpath>
                
                <xpath expr="//field[@name='custom_shipping_address']" position="replace">
                    <field name="custom_shipping_address" string = "Ship To"/>
                    <label for="street" string="" nolabel = "1"/>
                    <div>
                        <div class="o_address_format" name="div_address">
                            <field name="ship_street" placeholder="Street..." class="o_address_street"/>
                            <field name="ship_street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="ship_city" placeholder="City" class="o_address_city"/>
                            <field name="ship_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' />
                            <field name="ship_zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="ship_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' invisible = "1"/>
                        </div>
                    </div>
                </xpath> 
         <!-- invisible tax field froim purchase order line -->
        <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath> 
                <xpath expr="//field[@name='order_line']/form/sheet/group/group/field[@name='taxes_id']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath> 
                <xpath expr="//field[@name='amount_tax']" position="attributes" >
                    <attribute name="invisible">1</attribute>
                </xpath>


                <!-- change Product Line Header names -->
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                    <attribute name="string">Part Number</attribute>
                </xpath> 
                <xpath expr="//field[@name='order_line']//field[@name='name']" position="attributes">
                    <attribute name="string">Part Description</attribute>
                </xpath> 

                <!-- Add comment field in each order line  -->
                <xpath expr="//field[@name='order_line']//tree//field[@name='sequence']" position="after">
                    <field name="comment" invisible="1" />
                    <button name="%(customize_general_template.action_purchase_order_line_trans)d" type="action" 
                        icon="fa-comment"
                        context="{'default_comment': comment}" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[last()]" position="after">
                    <field name="comment" />
                    <field name="external_comment" />
                </xpath>
                
           </field>
        </record>

        <!-- Show all partners and partner childs who dont have any sale order yet -->
        <record id="inherit_action_partner_lead_customer_form" model="ir.actions.act_window">
            <field name="name">Lead</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_lead': 1}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to add a contact in your address book.
              </p><p>
                Odoo helps you easily track all activities related to
                a customer: discussions, history of business opportunities,
                documents, etc.
              </p>
            </field>
        </record>

        <menuitem id="inherit_res_partner_menu_crm"
            parent="crm.crm_menu_root"
            name="Lead"
            action="customize_general_template.inherit_action_partner_lead_customer_form"
            sequence="3"/>

        <record id="purchase.purchase_form_action" model="ir.actions.act_window">
            <field name="domain">[]</field>
        </record>

