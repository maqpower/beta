    <!-- add option for part number  -->
        <record id="biz_add_option_for_part_number" model="ir.ui.view">
            <field name="name">biz.add.option.for.partnuner</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//group//group[2]" position="after">
                    <group>
                        <field name="is_partnumber" invisible="1"/>
                        <field name="is_price" invisible = "1"/>
                    </group>
                </xpath>
                <xpath expr="//div[@name='carrier_selection']" position="after">
                        <field name="service_type" string = "Service Type"/>
                </xpath>
                <xpath expr="//field[@name='confirmation_date']" position="attributes">
                    <attribute name="widget">date</attribute>
                </xpath>
               
               <!-- partner address -->
               <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('customer','=',True),('custom_lead','=',False)]" context="{'show_address': 0, 'no_change': 1}" options='{"always_reload": True}'/>
                    <field name="customer_id" invisible="1" />
                    <label for="street" string="" style="border-bottom: 1px solid black;"/>
                    <div style="border-bottom: 1px solid black;">
                        <div class="o_address_format" name="div_address" nolabel = "1">
                            <field name="street" placeholder="Street..." class="o_address_street"/>
                            <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="city" placeholder="City" class="o_address_city"/>
                            <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' />
                            <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' invisible = "1"/>
                        </div >
                    </div >
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="replace">
                    <field name="partner_invoice_id"  groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice','show_address': 0, 'no_change': 1}" options='{"always_reload": True}'/>
                    <label for="street" string="" nolabel = "1" style="border-bottom: 1px solid black;"/>
                    <div style="border-bottom: 1px solid black;">
                        <div class="o_address_format" name="div_address">
                            <field name="inv_street" placeholder="Street..." class="o_address_street"/>
                            <field name="inv_street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="inv_city" placeholder="City" class="o_address_city"/>
                            <field name="inv_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' />
                            <field name="inv_zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="inv_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' invisible = "1"/>
                        </div>
                    </div>
                </xpath>
                
                <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                    <field name="partner_shipping_id" domain="[('customer','=',True),('custom_lead','=',False),('type','=','delivery'),('parent_id','=',customer_id)]" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery','show_address': 0, 'no_change': 1}" options='{"always_reload": True}'/>
                    <label for="street" string="" nolabel = "1"/>
                    <div>
                        <div class="o_address_format" name="div_address">
                            <field name="ship_street" placeholder="Street..." class="o_address_street"/>
                            <field name="ship_street2" placeholder="Street 2..." class="o_address_street"/>
                            <field name="ship_city" placeholder="City" class="o_address_city"/>
                            <field name="ship_state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' />
                            <field name="ship_zip" placeholder="ZIP" class="o_address_zip"/>
                            <field name="ship_country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}' invisible = "1"/>
                        </div>
                    </div>
                </xpath> 
                 <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="string">Bill To</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="string">Ship To</attribute>
                </xpath>
                <!--<xpath expr="//field[@name='validity_date']" position="before">
                        <field name="days_to_expire" attrs="{'readonly': [('state','not in',('draft',))]}"/>
                </xpath>-->


                <!-- change Product Line Header names -->
                <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                    <attribute name="string">Part Number</attribute>
                </xpath> 
                <xpath expr="//field[@name='order_line']//field[@name='name']" position="attributes">
                    <attribute name="string">Part Description</attribute>
                </xpath> 
                
                <!-- Add comment field in each order line  -->
               <xpath expr="//field[@name='order_line']//tree//field[@name='sequence']" position="after">
                    <field name="order_id" invisible="1"/>
                    <field name="comment" invisible="1" />
                    <button name="%(customize_general_template.action_sale_order_line_trans)d" type="action" 
                        icon="fa-comment"
                        context="{'order_id': order_id, 'default_comment': comment}" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='order_line']//tree//field[last()]" position="after">
                    <field name="comment" />
                    <field name="external_comment" />
                </xpath>
           </field>
        </record>

