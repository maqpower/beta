<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="stock_quant_initial_qty_view" model="ir.ui.view">
            <field name="name">stock.quant.initial.qty.view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree" />
            <field name="arch" type="xml">
               <xpath expr="//field[@name='quantity']" position="after">
                    <field name="initial_qty" invisible="1"/>
                     <field name="initial_qty_relate" />
                     <field name="re_order_qty"/>
                </xpath>
           </field>
        </record>

        <record id="stock_quant_initial_qty_form_view" model="ir.ui.view">
            <field name="name">stock.quant.initial.qty.form.view</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_form" />
            <field name="arch" type="xml">
                <xpath expr="//group/group[2]" position="inside">
                    <label for="initial_qty_relate" />
                            <div class="o_row">
                                <field name="initial_qty_relate"/>
                                    <field name="product_uom_id" groups="product.group_uom"/>
                            </div>
                            <label for="re_order_qty" />
                                <div class="o_row">
                                    <field name="re_order_qty"/>
                                </div>
                    <field name="initial_qty" invisible="1"/>
                </xpath>
           </field>
        </record>
    </odoo>
