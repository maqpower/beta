<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fleet_product_form" model="ir.ui.view">
        <field name="name">fleet.product.form</field>
        <field name="model">fleet.product</field>
        <field name="arch" type="xml">
            <form string="Stock Location">
                <sheet>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>
                    <group string="Vehicle Product Load">
                        <field name="fleet_product_line" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="product_qty"/>
                                <field name="fleet_product_line_id" invisible="1"/>
                                <field name="re_order_qty"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_fleet_product_tree" model="ir.ui.view">
        <field name="name">view.fleet.product.tree</field>
        <field name="model">fleet.product</field>
        <field name="priority" eval="2"/>
        <field name="arch" type="xml">
            <tree string="Fleet Product">
                <field name="name"/>
            </tree>
        </field>
    </record>
    
    <record id="action_fleet_default_load_product" model="ir.actions.act_window">
        <field name="name">Auto Reorder</field>
        <field name="res_model">fleet.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="target">current</field>
    </record>
    
    <record id="action_default_product_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_fleet_product_tree"/>
        <field name="act_window_id" ref="action_fleet_default_load_product"/>
    </record>
    
    <record id="action_default_product_info_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="4"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_fleet_product_form"/>
        <field name="act_window_id" ref="action_fleet_default_load_product"/>
    </record>
    
    <menuitem action="action_fleet_default_load_product" id="menu_fleet_load_product"
        parent="stock.menu_warehouse_config" sequence="4" />
</odoo>
