<odoo>
    <!-- add filter for miss attachement -->
    <record id="biz_miss_attachment" model="ir.ui.view">
        <field name="name">biz.add.miss.attachement</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unpaid']" position="after">
                <filter name="is_miss_attachment" domain="[('is_miss_attachment','=',False)]" string="Missing Attachment"/>
            </xpath>
       </field>
    </record>

